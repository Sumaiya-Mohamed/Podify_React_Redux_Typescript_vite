{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "module": "ESNext",
    "jsx":  "react-jsx",
    "strict": true,
    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "types": ["react", "react-dom", "react-router-dom"], // Ensure "react-router-dom" is included here
  "typeRoots": ["./node_modules/@types"], // Ensure this points to the correct path of @types
  "exclude": ["node_modules", "build", ".eslintrc.cjs"]
}